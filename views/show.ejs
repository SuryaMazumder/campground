<% include partials/header%>
<div class="container">
	<div class="row">
		
		<div class="col-md-3">
		<p class="lead">YelpCamp</p>
		<div class="list-group">
			<li class="list-group-item active" >Info 1</li>
			<li class="list-group-item">Info 1</li>
			<li class="list-group-item">Info 1</li>



		</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
			<img src="<%= campground.image %>" class="img-responsive">
				<div class="caption-full">
				<h4 class="pull-right">$9/night</h4>
				<h4><%= campground.name %></h4>
				<p><%= campground.description %></p>
				<p>
					<em> Submitted By <%= campground.author.username %> </em>
				</p>
				<% if(user && campground.author.id.equals(user._id)){ %>
				<a class="btn btn-xs btn-warning" href="/camp/<%=campground._id %>/edit">Edit</a>
				<form  id="delete-form" action="/camp/<%= campground._id%>?_method=DELETE" method="POST">
					<button class="btn btn-xs btn-danger">Delete</button>
				</form>
				<% } %>
				</div>
			</div>
			<div class="well">
					<div class=text-right>
					<a class="btn btn-success" href="/camp/<%=campground._id%>/comments/new">Add Comment</a>
					
					</div>
					<hr>
					<%campground.Comments.forEach(function(comments){ %>

					<div class="row">
						
							
						<div class="col-md-12">

							<strong><%=comments.author.username %>	</strong>
							<span class="pull-right">10 days ago</span>
							<p>
							<%=comments.text%>
							</p>
							<% if(user && comments.author.id.equals(user._id)){ %>

							<a class="btn btn-xs btn-warning" href="/camp/<%=campground._id %>/comments/<%= comments._id %>/edit">
								Edit</a>
							<form action="/camp/<%=campground._id %>/comments/<%= comments._id %>?_method=DELETE" id="delete-form" method="post">
								<input type="submit" class="btn btn-xs btn-danger" value="Delete">
							</form>
							<%} %>
						</div> 
					
						 
					</div>
					<% }) %>
			</div>
		</div>

	</div>

</div>
